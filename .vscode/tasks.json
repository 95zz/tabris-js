{

  "version": "0.1.0",
  "command": "grunt",
  "showOutput": "always",
  "isShellCommand": true,
  "tasks": [
    {
      "suppressTaskName": true,
      "taskName": " test all",
      "args": ["test"]
    },
    {
      "suppressTaskName": true,
      "taskName": " test spec",
      "args": ["exec:test_spec", "--spec=${file}"],
      "isTestCommand": true
    },
    {
      "suppressTaskName": true,
      "taskName": " test typings",
      "args": ["clean", "build", "copy:test_ts", "exec:test_typings"]
    }
  ]
}
