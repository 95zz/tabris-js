{
  "id": "rwt.widgets.Shell",
  "type": "object",
  "extends": "rwt.widgets.Composite",
  "properties": {
    "style": {
      "description": "Valid values are 'NONE', 'NO_TRIM', 'SHEET', 'BORDER', 'RESIZE', 'TITLE', 'CLOSE', 'APPLICATION_MODAL', 'PRIMARY_MODAL' and 'SYSTEM_MODAL'.",
      "type": "array of strings"
    },
    "mode": {
      "description": "Valid values are 'normal', 'maximized' and 'fullscreen'.",
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "alpha": {
      "type": "number"
    },
    "active": {
      "type": "boolean"
    },
    "data": {
      "type": {
        "animated": {
          "description": "Enable shell animation."
        }
      }
    }
  },
  "listeners": [
    "Activate",
    "resize",
    "Move",
    "Close"
  ]
}
