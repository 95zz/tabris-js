{
  "type": "RadioButton",
  "description": "A radio button. Selecting a radio button de-selects all its siblings (i.e. all radio buttons within the same parent).",
  "include": ["Widget"],
  "properties": {
    "text": {
      "type": "string"
    },
    "image": {
      "type": "Image"
    },
    "selection": {
      "type": "boolean?false"
    },
    "alignment": {
      "type": "string:left|right|center?center"
    }
  },
  "events": {
    "change:selection": true
  }
}
