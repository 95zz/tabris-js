{
  "id": "rwt.widgets.Button",
  "type": "object",
  "extends": "rwt.widgets.Control",
  "properties": {
    "style": {
      "description": "Valid values are 'PUSH', 'CHECK', 'RADIO', 'FLAT' and 'TOGGLE'.",
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "alignment": {
      "description": "Valid values are 'left', 'right' and 'center'.",
      "type": "string"
    },
    "selection": {
      "type": "boolean"
    },
    "image": {
      "type": [
        {
          "description": "Image Path",
          "type": "string"
        },
        {
          "description": "width",
          "type": "number"
        },
        {
          "description": "height",
          "type": "number"
        }
      ]
    },
    "font": {
      "type": [
        {
          "description": "Font Name",
          "type": "array of strings"
        },
        {
          "description": "Font Size",
          "type": "number"
        },
        {
          "description": "Bold",
          "type": "boolean"
        },
        {
          "description": "Italic",
          "type": "boolean"
        }
      ]
    }
  },
  "listeners": [
    "Selection"
  ]
}