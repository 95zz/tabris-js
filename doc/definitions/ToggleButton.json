{
  "type": "ToggleButton",
  "description": "A push button that remains pressed.",
  "include": ["Widget"],
  "properties": {
    "text": {
      "type": "string"
    },
    "image": {
      "type": "Image"
    },
    "selection": {
      "type": "boolean?false"
    },
    "alignment": {
      "type": "string:left|right|center?center",
      "description": "Specifies the horizontal alignment of the button text."
    }
  },
  "events": {
    "change:selection": {}
  },
  "links": [
    {
      "title": "Simple ToggleButton snippet",
      "path": "https://github.com/eclipsesource/tabris-js/blob/master/snippets/togglebutton/togglebutton.js"
    }
  ]
}
