{
  "type": "Slider",
  "description": "A widget representing a numeric value as an movable indicator on a horizontal line. *Known Issues: Selection event is only fired after indicator is released.*",
  "include": ["Widget"],
  "properties": {
    "minimum": {
      "type": "number?0"
    },
    "maximum": {
      "type": "number?100"
    },
    "selection": {
      "type": "number?0"
    }
  },
  "events": {
    "change:selection": {}
  },
  "links": [
    {
      "title" : "Simple Slider snippet",
      "path" : "https://github.com/eclipsesource/tabris-js/blob/master/snippets/slider/slider.js"
    }
  ]
}
