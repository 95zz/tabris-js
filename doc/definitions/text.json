{
  "id": "rwt.widgets.Text",
  "type": "object",
  "extends": "rwt.widgets.Scrollable",
  "properties": {
    "style": {
      "description": "Valid values are 'SINGLE', 'MULTI', 'PASSWORD' and 'BORDER'.",
      "type": "array of strings"
    },
    "text": {
      "type": "string"
    },
    "editable": {
      "type": "boolean"
    },
    "font": {
      "type": [
        {
          "description": "Font Name",
          "type": "array of strings"
        },
        {
          "description": "Font Size",
          "type": "number"
        },
        {
          "description": "Bold",
          "type": "boolean"
        },
        {
          "description": "Italic",
          "type": "boolean"
        }
      ]
    },
    "toolTip": {
      "type": "string"
    },
    "echoChar": {
      "type": "string"
    },
    "textLimit": {
      "type": "number"
    },
    "selection": {
      "type": "array"
    },
    "data": {
      "type": {
        "keyboard": {
          "description": "Valid values are 'ascii', 'numbersAndPunctuation', 'url', 'number', 'phone', 'email' and 'decimal'.",
          "type": "string"
        },
        "autoCapitalize": {
          "type": "boolean"
        },
        "autoCorrect": {
          "type": "boolean"
        }
      }
    }
  },
  "listeners": [
    "Selection",
    "Verify",
    "Modify"
  ]
}